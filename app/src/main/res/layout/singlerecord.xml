<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        android:text="Name of Student: "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Sabki"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/Sabak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginBottom="19dp"
        android:text="Sabak"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Manzil"
        app:layout_constraintStart_toStartOf="@+id/textView5" />

    <TextView
        android:id="@+id/Sabki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Sabki"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/Manzil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manzil"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Status"
        app:layout_constraintStart_toStartOf="@+id/Sabak"
        app:layout_constraintTop_toTopOf="@+id/Status" />


    <TextView
        android:id="@+id/Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="Manzil Status"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Sabki"
        app:layout_constraintTop_toBottomOf="@+id/Sabki" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="359dp"
        android:layout_height="164dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/border"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddToday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="12dp"
        android:text="Add Today"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <View
        android:id="@+id/divider"
        android:layout_width="402dp"
        android:layout_height="9dp"
        android:background="#4fa5d5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Date:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Manzil"
        app:layout_constraintTop_toBottomOf="@+id/Manzil" />
</androidx.constraintlayout.widget.ConstraintLayout>